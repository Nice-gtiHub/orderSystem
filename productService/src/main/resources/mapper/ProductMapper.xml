<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.order.productservice.dao.mapper.ProductMapper">

	<resultMap id="BaseResultMap" type="com.order.productservice.dao.entity.Product">
        <id column="product_id" jdbcType="INTEGER" property="productId"/>
        <id column="product_name" jdbcType="VARCHAR" property="productName"/>
        <id column="product_price" jdbcType="DECIMAL" property="productPrice"/>
    </resultMap>

    <select id="findByProductId" parameterType="java.lang.Integer" resultType="com.order.productservice.dao.entity.Product" resultMap="BaseResultMap">
        SELECT * FROM system_product where product_id = #{product_id,jdbcType=INTEGER}
    </select>

</mapper>